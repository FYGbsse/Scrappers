<link rel="stylesheet" href="{{ 'component-quick-cart.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-quick-cart.css' | asset_url | stylesheet_tag }}</noscript>

<div class="halo-sidebar halo-sidebar-right halo-cart-sidebar" id="halo-cart-sidebar">
    <button type="button" class="halo-sidebar-close button-effect" data-close-cart-sidebar aria-label="{{ 'general.common.close' | t }}">
        {% render 'icon-close' %}
        {{ 'general.common.close' | t }}
    </button>
    <div class="halo-sidebar-header text-left">
		<span class="title">
			Your Bag
		</span>
		<div class="wrapper-cartCount">
            <span class="cartCount" data-cart-count>{{ cart.item_count }}</span>
             <span id="cart_Items_Text">{{ 'sections.cart.item' | t }}</span>
	    </div>
	</div>
    <div class="halo-sidebar-wrapper custom-scrollbar {{cart.items}}">
      	{%- if settings.show_calculator_free_shipping_message -%}
          <div class="previewCartMessage">
            {% render 'free-shipping-component' %}
          </div>
        {%- endif -%}
		<cart-coupon-discount data-is-sidebar="true">
			<template data-discount-icon>
				{% render 'icon-discount' %}
			</template>
			<template data-discounted-price-template>
				<span class="previewCartItem-saving-price">
				<s class="before-discount-price" data-original-price-display>
					{{ item.original_price | money }}
				</s>  
				<span class="discounted-price" data-current-price-display>
					{{ item.final_price | money }}
				</span>
				</span> 
			</template>
			<div class="previewCart-wrapper"></div>
		</cart-coupon-discount>
  	</div>
</div>
<script src="{{ 'halo-toolcart.js' | asset_url }}" defer="defer"></script>
<script>

  $(document).ready(function() {
  // Capture click events on the body
  $('.previewCartList.sjCartList.list-unstyled').on('click', function(event) {
var cartItemCount = $(".cartCount").text();
var cartItemCount_1 = parseInt(cartItemCount, 10);
//console.log(cartItemCount_1);
    if (cartItemCount_1 === 1 || cartItemCount_1 === 0 ) {
   // console.log("item");
    $('#cart_Items_Text').text("item");
     // $("body .halo-sidebar").click();
       event.preventDefault();
  } else {
    $('#cart_Items_Text').text("items");
      //$("body .halo-sidebar").click();
    //console.log("items");
       event.preventDefault();
  }
  });
});
  
</script>


